{
  "name": "social-network-api",
  "version": "1.0.0",
  "description": "API REST pour réseau social moderne avec stockage MinIO",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "db:migrate": "npx prisma migrate dev",
    "db:deploy": "npx prisma migrate deploy",
    "db:studio": "npx prisma studio",
    "db:generate": "npx prisma generate",
    "db:reset": "npx prisma migrate reset",
    "docker:build": "docker build -t social-network-api .",
    "docker:run": "docker run -p 3000:3000 --env-file .env social-network-api",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f api"
  },
  "keywords": [
    "nodejs",
    "express",
    "postgresql",
    "prisma",
    "jwt",
    "api",
    "social-network",
    "rest",
    "email",
    "verification",
    "minio",
    "file-storage"
  ],
  "author": "Équipe CERCLE <contact@cercle.com>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@prisma/client": "^6.10.1",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "joi": "^17.9.0",
    "jsonwebtoken": "^9.0.2",
    "minio": "^7.1.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "sharp": "^0.34.2",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.1",
    "prisma": "^6.10.1"
  },
  "nodemonConfig": {
    "ignore": [
      "logs/*",
      "uploads/*",
      "node_modules/*",
      "coverage/*"
    ],
    "ext": "js,json",
    "env": {
      "NODE_ENV": "development"
    }
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
